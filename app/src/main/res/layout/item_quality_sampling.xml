<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="heshi"
            type="com.cdv.sampling.bean.ZhiLiangChouYang" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cell_no_top_border"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp">

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.code}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.xukeCode}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.GMPCode}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.gouMaiLeiXing.valueName}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.sampleSource.name}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.sampleSource.contactUser}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.sampleSource.telephone}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.jinHuoNumber}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.JinHuoTime}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{heshi.description}" />
    </LinearLayout>
</layout>