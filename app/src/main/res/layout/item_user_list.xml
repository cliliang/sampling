<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_top_padding"
    android:paddingLeft="@dimen/item_left_padding"
    android:paddingRight="@dimen/item_left_padding"
    android:paddingTop="@dimen/item_top_padding">

    <ImageView
        android:id="@+id/iv_arrow"
        android:src="@drawable/icon_unfold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    <ImageView
        android:id="@+id/iv_user"
        android:src="@drawable/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_user"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/iv_arrow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/item_title_color"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>