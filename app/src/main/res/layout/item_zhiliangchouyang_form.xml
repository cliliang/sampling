<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="chouyang"
            type="com.cdv.sampling.bean.ZhiLiangChouYang" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cell_no_top_border"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp">

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.code}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.SampleName}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.name}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.piHao}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.piZhunWenHao}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.sampleGuiGe}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.number}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.kuCun}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.shengChanUnit.name}" />

        <TextView
            style="@style/FormItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_cell_right_border"
            android:text="@{chouyang.description}" />
    </LinearLayout>
</layout>