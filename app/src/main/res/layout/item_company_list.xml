<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d7d7d7"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/item_left_padding"
        android:paddingRight="@dimen/item_left_padding"
        android:paddingTop="4dp"
        android:textColor="@color/item_title_color"
        android:textSize="16dp" />
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/listitem_basebg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_left_padding"
        android:paddingRight="@dimen/item_left_padding">
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_license_title"
                android:text="营业执照"
                android:textSize="@dimen/company_content_size"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_license"
                android:textSize="@dimen/company_content_size"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_license_title"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_address_title"
                android:text="地址"
                android:textSize="@dimen/company_content_size"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_address"
                android:textSize="@dimen/company_content_size"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_address_title"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_post_code_title"
                android:text="邮政编码"
                android:textSize="@dimen/company_content_size"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_postCode"
                android:textSize="@dimen/company_content_size"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_post_code_title"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_contact_people_title"
                android:text="联系人"
                android:textSize="@dimen/company_content_size"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_contact_people"
                android:textSize="@dimen/company_content_size"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_contact_people_title"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_fax_title"
                android:text="传真"
                android:textSize="@dimen/company_content_size"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_fax"
                android:textSize="@dimen/company_content_size"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_fax_title"
                android:textColor="@color/company_content_color"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>