<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/tools">

    <style name="AppNewTheme" parent="android:Theme.Wallpaper" />

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/main_color</item>
        <item name="colorControlActivated">@color/main_color</item>
        <item name="colorControlHighlight">@color/main_color</item>
        <item name="colorPrimary">@color/nav_bar_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:cursorVisible">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_common_home</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="android:textAppearance">@style/Custom.Widget.TextAppearance</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
    </style>

    <style name="AppBaseGreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/main_color</item>
        <item name="colorControlActivated">@color/main_color</item>
        <item name="colorControlHighlight">@color/main_color</item>
        <item name="colorPrimary">@color/nav_bar_color</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:cursorVisible">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_common_home</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="android:textAppearance">@style/Custom.Widget.TextAppearance</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
    </style>

    <style name="Custom.Widget.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/main_bg</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="colorControlNormal">@color/text_5e</item>
        <item name="colorControlActivated">@color/main_color</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
        <item name="android:minHeight">48dp</item>
        <item name="titleMargin">4dp</item>
        <item name="android:background">@color/navbar_bg</item>
        <item name="titleMargins">0dp</item>
        <item name="contentInsetStart">2dp</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="@style/AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/AppTheme.NoTitleBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="SamplingAppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppGreenTheme" parent="AppBaseGreenTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/launch_bg</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/color_ddd</item>
        <item name="android:textColor">@color/text_5e</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Transparent" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">

    </style>

    <style name="common_navigate_title_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <!--   <item name="android:shadowColor">@color/black</item>
          <item name="android:shadowDx">0</item>
          <item name="android:shadowDy">0</item>
          <item name="android:shadowRadius">0</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">center</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TitleHint">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/title_hint_bg</item>
    </style>

    <style name="SignatureTitleHint">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@color/title_hint_bg</item>
    </style>

    <style name="FormItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/tb_default_line_space</item>
        <item name="android:textColor">@color/tb_main_title</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="base_dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/transparent</item>
        <!-- 设置无遮罩层 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>